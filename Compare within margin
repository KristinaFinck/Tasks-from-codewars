//https://www.codewars.com/kata/56453a12fcee9a6c4700009c/train/javascript
function closeCompare(a, b, margin = 0){
 
   switch (true) {
    case Math.abs(a - b) <= margin:
      return 0;
    case a < b:
      return -1;
    case a > b:
      return 1;
    default:
      return "Invalid inputs";
  }
  }
